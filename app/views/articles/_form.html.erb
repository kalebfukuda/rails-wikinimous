
<%= form_with model: article do |f| %>
  <div class="d-flex flex-column form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
    <%= f.submit class: "btn btn-primary mt-1 w-100" %>
  </div>
<% end %>
